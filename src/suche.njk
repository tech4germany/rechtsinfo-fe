{% extends 'layouts/main.njk' %} {% set title = "Suchergebnisse" %} {% block
content %}
<section class="content">
  <header>
    <h1>Suchergebnisse</h1>
  </header>

  <div class="govuk-tabs" data-module="govuk-tabs">
    <ul class="govuk-tabs__list">
      <li class="govuk-tabs__list-item govuk-tabs__list-item--selected">
        <a class="govuk-tabs__tab" href="#alle">
          <i class="fas fa-search"></i> Alle Suchergebnisse
          <span class="filter-number alle">0</span>
        </a>
      </li>
      <li class="govuk-tabs__list-item" data-filter="laws">
        <a class="govuk-tabs__tab" href="#gesetze">
          <i class="fas fa-landmark"></i> Gesetze & Verordnungen
          <span class="filter-number gesetze">0</span>
        </a>
      </li>
      <li class="govuk-tabs__list-item" data-filter="articles">
        <a class="govuk-tabs__tab" href="#paragrafen"
          ><i class="fas section-icon">ยง</i> Paragrafen
          <span class="filter-number paragrafen">0</span>
        </a>
      </li>
    </ul>

    <div class="govuk-tabs__panel search-results" id="alle">
      {% include "./_includes/partials/searchResults.njk" %}
    </div>

    <div
      class="govuk-tabs__panel govuk-tabs__panel--hidden search-results"
      id="gesetze"
      data-filter="laws"
    >
      {% include "./_includes/partials/searchResults.njk" %}
    </div>

    <div
      class="govuk-tabs__panel govuk-tabs__panel--hidden search-results"
      id="paragrafen"
      data-filter="articles"
    >
      {% include "./_includes/partials/searchResults.njk" %}
    </div>
  </div>
</section>
{% endblock %}
